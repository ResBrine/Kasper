<UserControl x:Class="ChatClient.Pages.Items.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.Pages.Items" 
             xmlns:svgc1="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400" >
    <StackPanel HorizontalAlignment="Stretch">
        <Grid x:Name="grid" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="textBoxText" Grid.Column="0" TextAlignment="Right" Width="300" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Margin="5" Text="Ну привет"/>
            <TextBlock Name="textBoxDate" Grid.Column="1" VerticalAlignment="Center" FontSize="9.5" Text="20:45" Margin="5"/>
        </Grid>
    </StackPanel>
    
</UserControl>
