<Page x:Class="ChatClient.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid MouseMove="Grid_MouseMove" MouseLeftButtonUp="Grid_MouseUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="gridColumnListChats" Width="250"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions
            >
        <Frame x:Name="frameListChats" NavigationUIVisibility="Hidden"/>
            
        <Border x:Name="borderDD" Grid.Column="1" Background="Black" Opacity="0.1" Cursor="SizeWE" MouseLeftButtonDown="Grid_MouseDown" />

        <Frame x:Name="frameChat" Grid.Column="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
